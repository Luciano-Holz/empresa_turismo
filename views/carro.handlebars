<!--arquivo da pagina carro -->
<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-F3w7mX95PdgyTmZZMECAngseQB83DfGTowi0iMjiWaeVhAn4FJkqJByhZMI3AhiU" crossorigin="anonymous">
    <style>
        body {
            margin: 0;
            padding: 0;
        }

        .container {
            margin: 0 auto;
            width: 80%;
        }

        .nave {
            margin-bottom: 5px;
            background-color: rgba(127, 145, 233, 0.671);
        }
        .nave2 {
            background-color: rgba(127, 145, 233, 0.671);
        }
        li {
            display: inline-flex;
            padding: 10px;
            margin-right: 120px;
            margin-left: -12px;
        }
        a {
            text-decoration: none;
            color: rgb(11, 10, 19);
            font-size: 18px;
            font-weight: 500;
        }

        .cadastro {
            margin: 0 auto;
            width: 100%;
        }

        .campos {
            float: left;
            width: 30%;
            margin-bottom: 10px;
            margin-left: 30px;
        }
        .campos2 {
            width: 46%;
            float: left;
            margin-bottom: 10px;
            margin-left: 28px;
        }
        .resultado {
            max-height: 100px;
        }

        .table {
            margin-top: 10px;
        }

        .titulo {
            display: inline-flex;
        }

        .form-label {
            font-weight: 500;
        }

        .form-control {
            height: 30px;
            float: right;
        }

        button {
            margin-top: 10px;
            float: right;
            right: 20px;
        }

        .btn-edit {
            background-color: rgb(96, 238, 103);
            height: 35px;
            margin-top: 0;
        }
        .btn-edit:hover {
            background-color: rgb(50, 170, 56);
        }
        .btn-delete {
            background-color: rgb(238, 125, 96);
            height: 35px;
            margin-top: 0;
        }
        .btn-delete:hover {
            background-color: rgb(192, 73, 43);
        }

    </style>
    <title>Empresa de Turismo</title>
</head>
<body>
    <div class="container">
        <nav class="nave">
            <ul>
                <li><h3>Cadastro de Carros</h3></li>
                <li><a href="/viagem/{{dataValues.id}}">Viagens</a></li>
                <li><a href="/motorista/{{dataValues.id}}">Motoristas</a></li>
            </ul>
        </nav>
        <section class="cadastro"><!--formulário para cadastro de  carros -->
            <form class="row g-3 " action="/carro" method="POST">
                <div class="campos2">
                    <div class="col-md-12">
                        <label for="renavam" class="form-label">Renavam</label>
                        <input type="text" class="form-control" name="renavam" id="renavam"  required>  
                    </div>
                    <div class="col-md-12">
                        <label for="passageiros" class="form-label">Passageiros</label>
                        <input type="text" class="form-control" name="passageiros" id="passageiros"  required>
                    </div> 
                    <div class="col-md-12">
                        <label for="placa" class="form-label">Placa</label>
                        <input type="text" class="form-control" name="placa" id="placa"  required>
                    </div> 
                </div>
                <div class="campos2"> 
                    <div class="col-md-12">
                        <label for="modelo" class="form-label">Modelo</label>
                        <input type="text" class="form-control" name="modelo" id="modelo"  required>
                    </div>
                    <div class="col-md-12">
                        <label for="fabricacao" class="form-label">Fabricação</label>
                        <input type="date" class="form-control" name="fabricacao" id="fabricacao"  required>
                    </div>
                    <div >
                        <button class="btn btn-primary" type="submit">Cadastrar</button>
                    </div>      
                </div>
            </form>  
            
        </section>
        <section class="resultado">
            <table class="table"><!--tabela para exibir carros -->
                <thead class="nave2">
                    
                  <tr>
                    <th scope="col">Renavam</th>
                    <th scope="col">Modelo</th>
                    <th scope="col">Passageiros</th>
                    <th scope="col">Fabricação</th>
                    <th scope="col">Placa</th>
                    <th></th>
                    <th><h3>Carros</h3></th>
                  </tr>
                </thead>
                <tbody>
                    {{#each carros}}
                        <tr>
                            <td>{{dataValues.renavam}}</td>
                            <td>{{dataValues.modelo}}</td>
                            <td>{{dataValues.passageiros}}</td>
                            <td>{{#formatDate dataValues.fabricacao}}{{/formatDate}}</td>
                            <td>{{dataValues.placa}}</td>
                            <td><a href="/edit-carro/{{dataValues.id}}"><button class="btn btn-primary btn-edit">Editar</button></a></td>
                            <td><a href="/del-carro/{{dataValues.id}}"><button class="btn btn-primary btn-delete">Deletar</button></a></td>
                        </tr>
                  {{/each}}
                </tbody>
              </table>
        </section>
    </div>
</body>
</html>